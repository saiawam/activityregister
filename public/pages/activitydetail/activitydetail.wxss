/* activitydetail.wxss */
.activitydetails_container{
  padding: 42rpx  53rpx;
}
.activitydetails_body{
  width: 100%;
  height: 100%;
  font-family:"幼圆";
  color:#727071;
  background: #ffffff;
}
.activityDetails_title{
  font-size:44rpx;
  font-weight:800;
}
.activityDetails_nickname{
  color:#828A89;
  font-size:26rpx;
}

.activityDetails_description{
  padding:52rpx 32rpx;
}

.activityDetails_member{
  padding:36rpx 0 34rpx;
  width:650rpx;
  clear: both;
  overflow: auto;
  border: 1px solid #ddd;
  border-radius: 5px;
  box-shadow: 1px 1px 1px #ddd;
}
.activityDetails_member_list{
  width:120rpx;
  margin-right: 10rpx;
  margin-bottom: 40rpx;
  float: left;
  text-align: center;
}
.activityDetails_member_nickname{
  height: 36rpx;
  line-height:36rpx; 
  font-size:26rpx;
  white-space:nowrap; 
  text-overflow:ellipsis;
  overflow:hidden;
}
.activityDetails_time{
  margin-top:36rpx;
  font-size: 28rpx;
  color: #828383;
  float: right;
  width: 660rpx;
  text-align: right;
}
.activityDetails_btn{
  position: fixed;
  width: 100%;
  bottom: 0;
}
button{
  border-bottom-left-radius:0;
  border-bottom-right-radius:0;  
}